{
   "kind":"Deployment",
   "apiVersion":"apps/v1",
   "metadata":{
      "name":"blue",
      "labels":{
         "app":"blue"
      }
   },
   "spec":{
      "replicas":1,
      "template":{
         "metadata":{
            "labels":{
               "app":"blue"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"blue",
                  "image":"nakotisanthosh/udacitycap:v1",
                  "imagePullPolicy": "Always",
                  "ports":[
                     {
                        "name":"http-server",
                        "containerPort":80
                     }
                  ]
               }
            ]
         }
      }
   }
}
